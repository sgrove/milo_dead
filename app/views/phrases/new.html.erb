<h1>New phrase</h1>

<% form_for(@phrase) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :phrase %><br />
    <%= f.text_area :phrase %>
  </p>
  <p>
    <%= f.label :language %><br />
    <%= collection_select(:phrase, :language_id, Language.find(:all), :id, "description") %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', phrases_path %>
